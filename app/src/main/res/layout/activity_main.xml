<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tegprogramming.com.retrofitpractice.MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="35dp"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            />\

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditText"
            android:layout_toRightOf="@+id/name"
            android:layout_alignParentTop="true"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="35dp"
            android:id="@+id/email"
            android:layout_below="@id/name"

            />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EmailEditText"
        android:layout_toRightOf="@+id/email"
        android:layout_below="@id/nameEditText"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topics"
            android:textSize="35dp"
            android:text="Topics: "
            android:layout_below="@+id/email"

            />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TopicsEditText"
        android:layout_toRightOf="@+id/topics"
        android:layout_below="@id/EmailEditText"

        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:textSize="35dp"
            android:text="Age: "
            android:layout_below="@+id/topics"

            />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AgeEditText"
        android:layout_toRightOf="@+id/age"
        android:layout_below="@id/TopicsEditText"


        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/nameEditText"
        android:text="Button" />

</RelativeLayout>
